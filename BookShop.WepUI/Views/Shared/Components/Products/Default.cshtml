@model List<ProductViewModel>

<div class="row">

    @if (Model.Any()) // Model.Count != 0
    {
        @foreach (var item in Model)
        {
            <div class="col-4 mb-3">
                <div class="card shadow-sm" style="height:380px">

                    <div class="card-header" style="width:100%">

                        @if (!string.IsNullOrWhiteSpace(item.ImagePath))
                        {
                            <img style="width:100%; height:225px" src="~/images/products/@item.ImagePath" />
                        }
                        else
                        {
                            <img style="width:100%; height:225px" src="~/images/noImage.jpg" />
                        }

                    </div>

                    <div class="card-body">
                        <p class="card-text fw-bold">@item.Name</p>
                        <p class="card-text fw-bold">@item.UnitPrice TL</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a asp-controller="Product" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">İncele</a>
                            </div>
                            <small class="text-body-secondary">

                                @if (item.UnitsInStock <= 3)
                                {
                                    <span class="text-danger">Tükeniyor</span>
                                }

                            </small>
                        </div>
                    </div>
                </div>
            </div>
        }




    }
    else
    {
        <div class="alert alert-warning">
            Bu Kategoride ürün yok.
        </div>
    }






</div>
