<html>
<head>

    <title>Si&Si Yönetim</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

    <link href="https://cdn.datatables.net/v/dt/dt-1.13.6/datatables.min.css" rel="stylesheet">

</head>
<body>

    <div class="container">
        <header class="d-flex flex-wrap justify-content-center py-3 mb-4 border-bottom">
            <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto link-body-emphasis text-decoration-none">
                <svg class="bi me-2" width="40" height="32"><use xlink:href="#bootstrap"></use></svg>
                <span class="fs-4">Si&Si Yönetim Paneli</span>
            </a>

            <ul class="nav nav-pills">
                <li class="nav-item"><a asp-area="" asp-controller="" asp-action="" class="nav-link active fw-bold" aria-current="page">Siteye Geri Dön</a></li>
                <li class="nav-item"><a asp-controller="Category" asp-action="List" class="nav-link">Kategoriler</a></li>
                <li class="nav-item"><a asp-controller="Product" asp-action="List" class="nav-link">Ürünler</a></li>
            </ul>
        </header>
    </div>

    <div class="container">
        @RenderBody()
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    <script src="https://cdn.datatables.net/v/dt/dt-1.13.6/datatables.min.js"></script>

    @await RenderSectionAsync("Scripts", required:false);


</body>
</html>